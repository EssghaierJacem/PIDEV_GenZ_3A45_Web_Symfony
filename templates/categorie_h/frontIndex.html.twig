{% extends "frontbase.html.twig" %}

{% block title %}
	Category List
{% endblock %}

{% block body %}
	<section class="breadcrumbs">
		<div class="container">
			<div class="d-flex justify-content-between align-items-center">
				<h2>Liste des Catégories</h2>
				<ol>
					<li>
						<a href="{{path ('app_front') }}">Home</a>
					</li>
					<li>
						<a href="{{ path('front_categorie_index')}}">Catégories</a>
					</li>
				</ol>
			</div>
		</div>
	</section>

	<section id="portfolio-details" class="portfolio-details">
		<div
			class="container">
			<!-- ======= Starts Here ======= -->
			<div class="row">
				{% for categorie_h in categorie_hs %}
					<div class="col-lg-4 col-md-6 portfolio-item">
						<div class="portfolio-wrap">
							<div class="portfolio-info">
								<h4>{{ categorie_h.Type }}</h4>
								<p>{{ categorie_h.description }}</p>
								<a href="{{ path('app_categorie_h_show22', {'id': categorie_h.id}) }}" class="btn btn-primary">Show more</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col">
						Aucune catégorie d'hébergement trouvée.
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
{% endblock %}
