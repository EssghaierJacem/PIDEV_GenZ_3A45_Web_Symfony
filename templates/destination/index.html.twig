{% extends 'backbase.html.twig' %}

{% block title %}Destinations{% endblock %}

{% block body %}
     <div class="midde_cont">
                      <div class="container-fluid">
                         <div class="row column_title">
                            <div class="col-md-12">
                               <div class="page_title">
                                  <h2>Destinations</h2>
                               </div>
                            </div>
                    </div>

    <div class="table_row">
    <div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Pays</th>
                <th scope="col">Ville</th>
                <th scope="col">Attractions</th>
                <th scope="col">Devise</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for destination in pagination %}
                <tr>
                    <th scope="row">{{ destination.id }}</th>
                    <td>{{ destination.pays }}</td>
                    <td>{{ destination.ville }}</td>
                    <td>{{ destination.attractions }}</td>
                    <td>{{ destination.devise }}</td>
                    <td>
                        <a href="{{ path('app_destination_show', {'id': destination.id}) }}" class="btn cur-p btn-info">
                            <i>Info</i>
                        </a>
                        <a href="{{ path('app_destination_edit', {'id': destination.id}) }}" class="btn cur-p btn-warning">
                            <i>Mod</i>
                        </a>
                        <form action="{{ path('app_destination_delete', {'id': destination.id}) }}" method="post" style="display: inline-block;">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn cur-p btn-danger" onclick="return confirm('Are you sure you want to delete this destination?')">
                                <i>Supp</i>
                            </button>
                        </form>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No destinations found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
        {{ knp_pagination_render ( pagination ) }}
    </div>
    </div>

{% endblock %}
