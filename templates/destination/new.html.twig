{% extends 'backbase.html.twig' %}

{% block title %}New Destination{% endblock %}

{% block body %}
    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                    <div class="page_title">
                        <h2><a href="{{ path('app_destination') }}"  ">
