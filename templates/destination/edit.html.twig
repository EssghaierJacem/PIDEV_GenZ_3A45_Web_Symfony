                                    {{ form_widget(form.pays, {'attr': {'class': 'form-control'}}) }}
                                    <div class="custom-error-message" style="color: red; font-size: 14px; margin-top: 5px; margin-bottom: 10px;">
                                        {{ form_errors(form.pays) }}
                                    </div>
                                </div>
                            </div>
