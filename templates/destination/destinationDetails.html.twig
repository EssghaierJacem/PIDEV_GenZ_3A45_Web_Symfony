{% extends 'frontbase.html.twig' %}

{% block title %}Destination Details{% endblock %}

{% block body %}
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Details sur {{ destination.pays }} </h2>
                    <ol>
                        <li><a href="{{path ('app_front') }}">Home</a></li>
                        <li><a href="{{ path('app_destinations')}}">Destinations</a></li>
                        <li>{{destination.pays}} - {{destination.ville}}</li>
                    </ol>
                </div>
            </div>
        </section>
<section id="portfolio-details" class="portfolio-details">
    <div class="container">
        <div class="row gy-4">
            <div class="col-lg-8">
                <div class="portfolio-details-slider swiper">
                    <div class="swiper-wrapper align-items-center">
                        <div class="swiper-slide">
                            <img src="{{ destination.multimedia }}" alt="">
                        </div>
                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="portfolio-info">
                    <h3>{{ destination.pays }} - {{ destination.ville }}</h3>
                    <ul>
                        <li><strong>Attractions</strong>: {{ destination.attractions }}</li>
                        <li><strong>Accommodation</strong>: {{ destination.accomodation }}</li>
                        <li><strong>Cuisine Locale</strong>: {{ destination.cuisineLocale }}</li>
                        <li><strong>Devise</strong>: {{ destination.devise }}</li>
                        <li><strong>Accessibilité</strong>: {{ destination.accessibilite ? 'Oui' : 'Non' }}</li>
                    </ul>
                </div>
                <div class="portfolio-description">
                    <h2>A propos {{destination.ville}} :</h2>
                    <p>
                    {{destination.description}}
                    </p>

                </div>
                <div style="text-align: left;">
                    <button style="background-color: #007bff; border: none; color: white; padding: 10px 20px; text-align: center; text-decoration: none; display: inline-block; font-size: 16px; margin: 4px 2px; cursor: pointer;">
                        <a href="#about" class="btn-get-started scrollto" style="color: white; text-decoration: none;">Réservez!</a>
                    </button>
            </div>
        </div>
    </div>
</section>
{% endblock %}
