{% extends 'backbase.html.twig' %}

{% block title %}Destination Details{% endblock %}

{% block body %}
    <div class="midde_cont">
        <div class="container-fluid">
            <div class="row column_title">
                <div class="col-md-12">
                    <div class="page_title">
                        <h2><a href="{{ path('app_destination') }}"  ">
                            <i class="fa fa-arrow-left">   &nbsp; </i>
                        </a>Détail destination</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="white_shd full margin_bottom_30">
                <div class="full graph_head">
                    <div class="heading1 margin_0">
                        <h2><i class="fa fa-file-text-o"></i> Rapport Destination : {{ destination.id }}</h2>
                    </div>
                </div>
                <div class="full">
                    <div class="invoice_inner">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                    <h4 style="margin-left: 10px;">Aspects du voyage</h4>
                                    <div style="overflow-wrap: break-word;">
                                        <p style="margin-left: 10px;"><strong>Pays :</strong> {{ destination.pays }}</p>
                                        <p style="margin-left: 10px;"><strong>Ville :</strong> {{ destination.ville }}</p>
                                        <p style="margin-left: 10px;"><strong>Abbréviation :</strong> {{ destination.abbrev }}</p>
                                        <p style="margin-left: 10px;"><strong>Attractions :</strong> {{ destination.attractions }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                    <h4 style="margin-left: 10px;">Identité touristique</h4>
                                    <div style="overflow-wrap: break-word;">
                                        <p style="margin-left: 10px;"><strong>Accommodations :</strong> {{ destination.attractions }}</p>
                                        <p style="margin-left: 10px;"><strong>Cuisine locale :</strong> {{ destination.cuisineLocale }}</p>
                                        <p style="margin-left: 10px;"><strong>Devise :</strong> {{ destination.devise }}</p>
                                        <p style="margin-left: 10px;"><strong>Accessible :</strong> {{ destination.accessibilite }}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="full invoice_blog padding_infor_info padding-bottom_0">
                                    <h4>Destination No - #{{ destination.id }} </h4>
                                    <div style="overflow-wrap: break-word;">
                                        <p style="margin-left: 10px;"><strong>Description :</strong></p>
                                        <p style="margin-left: 10px;">{{ destination.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="full gallery_section_inner padding_infor_info">
                        <div class="row">
                            <div class="col-sm-4 col-md-3 margin_bottom_30" style="margin-left: 15px;">
                                <div class="column">
                                    <a data-fancybox="gallery" href="{{ destination.multimedia }}"><img class="img-responsive" src="{{ destination.multimedia }}" alt="Pas d'image trouvé" /></a>
                                </div>
                                <div class="heading_section">
                                    <h4>Image du {{ destination.pays }} - {{ destination.ville }}</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="text-align: center;">
                        <button type="button" class="btn cur-p btn-secondary">
                            <a href={{ path('destination.pdf', {'id': destination.id}) }} class="btn-get-started scrollto" style="color: white; text-decoration: none;">Imprimer</a>
                        </button>
                        <button type="button" class="btn cur-p btn-warning">
                            <a href={{ path('app_destination_edit', {'id': destination.id}) }}" class="btn-get-started scrollto" style="color: white; text-decoration: none;">Modifier</a>
                        </button>
                        <button type="button" class="btn cur-p btn-danger">
                            <a href={{ path('app_destination_delete', {'id': destination.id}) }} class="btn-get-started scrollto" style="color: white; text-decoration: none;">Supprimer</a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
