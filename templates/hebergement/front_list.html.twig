{% extends "frontbase.html.twig" %}

{% block title %}
	Accommodations List
{% endblock %}

{% block body %}
	<section class="breadcrumbs">
		<div class="container">
			<div class="d-flex justify-content-between align-items-center">
				<h2>Portfolio Details</h2>
				<ol>
					<li>
						<a href="index.html">Home</a>
					</li>
					<li>
						<a href="portfolio.html">Your Entity</a>
					</li>
					<li>Addition mta3 Entity mtaaek</li>
				</ol>
			</div>
		</div>
	</section>

	<section id="portfolio-details" class="portfolio-details">
		<div class="container">
			<div class="row">
				{% for hebergement in hebergements %}
					<div class="col-lg-4 col-md-6 portfolio-item p-3">
						<div class="card">
							<img src="{{ hebergement.adresse }}" class="card-img-top equal-height-image" alt="...">
							<div class="card-body">
								<h5 class="card-title">{{ hebergement.nomH }}</h5>
								<p class="card-text">Stars:
									{% set stars = '★' %}
									{% for i in range(2, hebergement.nbrEtoile) %}
										{% set stars = stars ~ '★' %}
									{% endfor %}
									{{ stars }}
								</p>
								<p class="card-text">Capacity:
									{{ hebergement.capacite }}
								</p>
								<p class="card-text">Tariff per night ($):
									{{ hebergement.tarifParNuit }}
								</p>
								<a href="{{ path('front_hebergement_show', {'id': hebergement.id }) }}" class="btn btn-primary">Show more</a>
							</div>
						</div>
					</div>
				{% else %}
					<div class="col-md-12">
						<p>No records found</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>

	<style>
		/* Définir une hauteur pour toutes les images des cartes */
		.equal-height-image {
			height: 200px; /* ajustez la hauteur selon vos préférences */
			object-fit: cover; /* Assurez-vous que l'image couvre la totalité du conteneur */
		}
	</style>
{% endblock %}
