{% extends "backbase.html.twig" %}

{% block title %}
	Accommodation Details
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Accommodation Details</h1>
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ hebergement.id }}</td>
				</tr>
				<tr>
					<th>Accommodation</th>
					<td>{{ hebergement.nomH }}</td>
				</tr>
				<tr>
					<th>Image</th>

					<td><img src="{{ hebergement.adresse }}" width="450" height="300"></td>

				</tr>
				<tr>
					<th>Stars</th>
					<td>{{ hebergement.nbrEtoile }}</td>
				</tr>
				<tr>
					<th>Capacity</th>
					<td>{{ hebergement.capacite }}</td>
				</tr>
				<tr>
					<th>Tariff per night</th>
					<td>{{ hebergement.tarifParNuit }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('app_hebergement_index') }}" class="btn btn-primary">Back to List</a>
		<a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" class="btn btn-warning">Edit</a>
		{{ include('hebergement/_delete_form.html.twig') }}
	</div>

{% endblock %}
