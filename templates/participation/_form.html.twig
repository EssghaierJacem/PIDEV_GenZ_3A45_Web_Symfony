{# _form.html.twig #}
<div class="container">
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.nom) is not empty %}
            <div class="alert text-danger">
                {{ form_errors(form.nom) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.prenom) is not empty %}
            <div class="alert text-danger">
                {{ form_errors(form.prenom) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.tel, 'Tel', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.tel) is not empty %}
            <div class="alert text-danger">
                {{ form_errors(form.tel) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.email) is not empty %}
            <div class="alert text-danger">
                {{ form_errors(form.email) }}
            </div>
        {% endif %}
    </div>

    {{ form_rest(form) }}

    <div class="text-end mt-4">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a href="{{ path('event_frontindex') }}" class="btn btn-secondary">Back to List</a>
    </div>

    {{ form_end(form) }}
</div>
