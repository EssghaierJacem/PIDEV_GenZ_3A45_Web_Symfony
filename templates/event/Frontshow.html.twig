{% extends 'frontbase.html.twig' %}
{% block title %}Events - Détails{% endblock %}
{% block body %}
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Event Details</h2>
                    <ol>
                        <li><a href="{{path ('app_front') }}">Home</a></li>
                        <li><a href="{{ path('app_event')}}">Events</a></li>
                        <li>{{event.nom}}</li>
                    </ol>
                </div>
            </div>
        </section>
              <section id="portfolio-details" class="portfolio-details">
                    <div class="container">
    <div class="container">
        <h1 class="mb-4">Détails de l'événement</h1>

        <div class="row">
            <div class="col-md-4">
                <img src="{{ event.image }}" alt="Event Image" class="img-fluid">
            </div>
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ event.nom }}</td>
                        </tr>
                        <tr>
                            <th>Date de début</th>
                            <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Date de fin</th>
                            <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Lieu</th>
                            <td>{{ event.lieu }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                        <tr>
                            <th>Organisateur</th>
                            <td>{{ event.organisateur }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ event.prix }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('add_participation_new') }}" class="btn btn-primary btn-sm mr-2">Participer</a>
            <a href="{{ path('PDFGenerate', {'id': event.id}) }}" class="btn btn-primary btn-sm mr-2">Générer un ticket</a>
            <a href="{{ path('app_event_index') }}" class="btn btn-secondary btn-sm">Retour à la liste</a>
        </div>
    </div>
                </div>
            </section>
{% endblock %}
