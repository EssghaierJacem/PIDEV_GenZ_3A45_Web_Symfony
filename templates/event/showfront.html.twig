{% extends 'frontbase.html.twig' %}


{% block body %}
    <h1>Event Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ event.nom }}</td>
            </tr>
            <tr>
                <th>DateDebut</th>
                <td>{{ event.dateDebut ? event.dateDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateFin</th>
                <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.lieu }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Organisateur</th>
                <td>{{ event.organisateur }}</td>
            </tr>
        </tbody>
    </table>

    <div>
    <a href="{{ path('app_event_index') }}">back to list</a>
</div>

<div>
    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
</div>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
