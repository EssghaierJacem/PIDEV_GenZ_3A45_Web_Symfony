{% extends 'frontbase.html.twig' %}
{% block title %}Events - Index{% endblock %}
{% block body %}
        <section class="breadcrumbs">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h2>Liste des evenements</h2>
                    <ol>
                        <li><a href="{{path ('app_front') }}">Home</a></li>
                        <li><a href="{{ path('app_commande_index')}}">Events</a></li>
                    </ol>
                </div>
            </div>
        </section>
              <section id="portfolio-details" class="portfolio-details">
                    <div class="container">
    <div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-title">
                <h2>Event Details</h2>
            </div>
        </div>
    </div>
    <div class="row">
        <!-- Left section for search and checkboxes -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <!-- Search form -->
                    <h5 class="card-title">Chercher par nom</h5>
                    <form action="{{ path('app_event') }}" method="GET" id="event-filter-form">
                        <div class="form-group">
                            <input type="text" class="form-control" name="keyword" placeholder="Saisir un nom...">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Rechercher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                {% for event in pagination %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <img src="{{ event.image }}" class="card-img-top" alt="Event Image" style="height: 200px; object-fit: cover; border-radius: 5px;">
                        <div class="card-body">
                            <h5 class="card-title">{{ event.nom }}</h5>
                            <p class="card-text">{{ event.lieu }}</p>
                            <a href="{{ path('front_event_show', {'id': event.id}) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-md-12">
                    <p>Aucun enregistrement trouv√©</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
            </div>
        </section>

{% endblock %}
