{% extends 'backbase.html.twig' %}

<title>Reservation</title>

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Nom_client</th>
                <td>{{ reservation.nomClient }}</td>
            </tr>
            <tr>
                <th>Prenom_client</th>
                <td>{{ reservation.prenomClient }}</td>
            </tr>
            <tr>
                <th>Num_tel</th>
                <td>{{ reservation.numTel }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ reservation.quantite }}</td>
            </tr>
            <tr>
                <th>Date_reservation</th>
                <td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Qr_code</th>
                <td>{{ reservation.qrCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
