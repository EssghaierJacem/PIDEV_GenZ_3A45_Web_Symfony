{% extends 'frontbase.html.twig' %}

{% block title %}Vol Details{% endblock %}

{% block body %}
    <section class="breadcrumbs">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>Vol Details</h2>
                        <ol>
                            <li><a href="index.html">Home</a></li>
                            <li><a href={{ path('app_vol') }}>Vols</a></li>
                            <li>Vol Details</li>
                        </ol>
                    </div>
                </div>
            </section>
       <section id="portfolio-details" class="portfolio-details">
                   <div class="container">
        <dl class="row">
        <dt class="col-sm-3">Compagnie</dt>
        <dd class="col-sm-9">{{ vol.compagnieA }}</dd>

        <dt class="col-sm-3">Numéro de Vol</dt>
        <dd class="col-sm-9">{{ vol.numVol }}</dd>

        <dt class="col-sm-3">Aéroport de Départ</dt>
        <dd class="col-sm-9">{{ vol.aeroportDepart }}</dd>

        <dt class="col-sm-3">Aéroport d'Arrivée</dt>
        <dd class="col-sm-9">{{ vol.aeroportArrivee }}</dd>

        <dt class="col-sm-3">Date de Départ</dt>
        <dd class="col-sm-9">{{ vol.dateDepart|date('Y-m-d H:i:s') }}</dd>

        <dt class="col-sm-3">Date d'Arrivée</dt>
        <dd class="col-sm-9">{{ vol.dateArrivee|date('Y-m-d H:i:s') }}</dd>

        <dt class="col-sm-3">Tarif</dt>
        <dd class="col-sm-9">{{ vol.tarif }} EUR</dd>

        <dt class="col-sm-3">Destination</dt>
        <dd class="col-sm-9">{{ vol.destination }}</dd>
    </dl>
        </div>
            </section>
{% endblock %}
