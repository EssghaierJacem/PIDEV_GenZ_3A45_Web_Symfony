{% extends 'frontbase.html.twig' %}

{% block title %}Vols{% endblock %}

{% block body %}
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Vols disponibles</h2>
                <ol>
                    <li><a href="{{path('app_front')}}">Home</a></li>
                    <li><a href="{{ path('app_vol') }}">Vol</a></li>
                </ol>
            </div>
        </div>
    </section>

    <section id="filters-and-details" class="py-5">
        <div class="container">
            <div class="row">
                <!-- Filters and Date Selection -->
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Filter and Date Selection</h5>
                            <!-- Add your filter and date selection inputs here -->
                            <div class="form-group">
                                <label for="date" class="text-muted">Select Date:</label>
                                <input type="date" class="form-control" id="date">
                            </div>
                            <div class="form-group">
                                <label for="departure" class="text-muted">Departure Airport:</label>
                                <input type="text" class="form-control" id="departure" placeholder="Enter departure airport">
                            </div>
                            <div class="form-group">
                                <label for="arrival" class="text-muted">Arrival Airport:</label>
                                <input type="text" class="form-control" id="arrival" placeholder="Enter arrival airport">
                            </div>
                            <!-- Add more filters or inputs as needed -->
                            <button class="btn btn-primary btn-block" style="margin-bottom: 5px; margin-top: 15px;">Appliquez filters</button>
                        </div>
                    </div>
                </div>

                <!-- Flight Details -->
                <div class="col-lg-8">
                    {% for vol in vols %}
                        <div class="card mb-4 border-primary shadow" style="background-color: #F1F6FE;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h5 class="card-title text-primary">{{ vol.compagnieA }}</h5>
                                        <p class="card-text text-muted">Num√©ro de Vol: {{ vol.numVol }}</p>
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="card-text text-muted">{{ vol.aeroportDepart }} to {{ vol.aeroportArrivee }}</p>
                                        <p class="card-text text-muted">{{ vol.dateDepart|date('Y-m-d') }} to {{ vol.dateArrivee|date('Y-m-d') }}</p>
                                    </div>
                                    <div class="col-sm-4">
                                        <p class="card-text text-muted">Prix: {{ vol.tarif }}</p>
                                        <a href="{{ path('app_vol_details_show', {'id': vol.id}) }}" class="btn btn-primary animate__animated animate__fadeIn">More Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning" role="alert">
                            No vols found.
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
