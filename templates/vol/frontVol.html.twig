{% extends 'frontbase.html.twig' %}

{% block title %}Vols{% endblock %}

{% block body %}
    <section class="breadcrumbs">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2>List of Vols</h2>
                        <ol>
                            <li><a href="index.html">Home</a></li>
                            <li><a href={{ path('app_vol') }}>Vol</a></li>
                        </ol>
                    </div>
                </div>
            </section>
    <section id="portfolio-details" class="portfolio-details">
                <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Compagnie</th>
                <th scope="col">Numéro de Vol</th>
                <th scope="col">Départ</th>
                <th scope="col">Arrivée</th>
                <th scope="col">Infos</th>

            </tr>
        </thead>
        <tbody>
            {% for vol in vols %}
                <tr>
                    <th scope="row">{{ vol.id }}</th>
                    <td>{{ vol.compagnieA }}</td>
                    <td>{{ vol.getNumVol() }}</td>
                    <td>{{ vol.aeroportDepart }}</td>
                    <td>{{ vol.aeroportArrivee }}</td>
                    <td><a href="{{ path('app_vol_details_show', {'id': vol.id}) }}" class="btn btn-primary btn-sm">More Details</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No vols found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    </div>
            </section>
{% endblock %}
