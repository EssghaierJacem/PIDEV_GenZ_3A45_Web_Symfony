{% extends 'frontbase.html.twig' %}

{% block title %}Vols{% endblock %}

{% block body %}
    <style>
        .flight-details-box {
            background-color: #F1F6FE;
            padding: 15px;
            border: 1px solid #007bff;
            border-radius: 5px;
            margin-bottom: 20px;
            position: relative; /* Add relative positioning */
        }

        .flight-details-box .airline-logo {
            width: 100px; /* Adjust width as needed */
            height: 100px; /* Adjust height as needed */
            margin-right: 10px;
            float: left;
            object-fit: cover; /* Maintain aspect ratio and cover container */
        }

        .flight-details-box .details {
            overflow: hidden;
            padding-top: 10px;
        }

        .flight-details-box .card-title {
            font-weight: bold;
            font-size: 18px;
            margin-bottom: 5px;
        }

        .flight-details-box .card-text {
            font-style: italic; /* Make the text italic */
            margin-bottom: 5px;
        }

        .flight-details-box .more-details-btn {
            position: absolute; /* Position the button absolutely */
            bottom: 10px; /* Adjust bottom distance */
            right: 10px; /* Adjust right distance */
            padding: 5px 15px;
        }

        /* Make specific texts bold */
        .bold-text {
            font-weight: bold;
        }

        /* Make specific texts italic */
        .italic-text {
            font-style: italic;
        }
    </style>

    <section id="filters-and-details" class="py-5">
        <div class="container">
            <div class="row">
                <!-- Filters and Date Selection -->
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Filter and Date Selection</h5>
                            <form id="searchForm" method="get" action="{{ path('app_vol') }}">
                                <div class="form-group">
                                    <label for="dateDepart" class="text-muted bold-text">Date de départ :</label>
                                    <input type="date" class="form-control" id="dateDepart" name="date_depart">
                                </div>
                                <div class="form-group">
                                    <label for="dateArrivee" class="text-muted bold-text">Date d'arrivée :</label>
                                    <input type="date" class="form-control" id="dateArrivee" name="date_arrivee">
                                </div>
                                <!-- Add more filters or inputs as needed -->
                                <button type="submit" class="btn btn-primary btn-block" style="margin-bottom: 5px; margin-top: 15px;">Apply Filters</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Flight Details -->
                <div class="col-lg-8">
                    {% for vol in pagination %}
                        <div class="flight-details-box">
                            <div class="row">
                                <div class="col-sm-4">
                                    <!-- Airline Logo -->
                                    <img src="{{ vol.image }}" alt="Airline Logo" class="airline-logo">
                                    <div class="details">
                                        <!-- Airline Name -->
                                        <h5 class="card-title text-primary">{{ vol.compagnieA }}</h5>

                                        <!-- From and To -->
                                        <p class="card-text text-muted bold-text">From</p> <i class="italic-text">{{ vol.aeroportDepart }}</i> <p class="card-text text-muted bold-text">To</p> <i class="italic-text">{{ vol.aeroportArrivee }}</i></p>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <!-- Departure and Arrival Dates -->
                                    <p class="card-text text-muted bold-text" style="margin-top: 38px;">Date de départ:</p>
                                    <i class="italic-text">{{ vol.dateDepart|date('l, d, Y') }}</i><br>
                                    <p class="card-text text-muted bold-text">Date d'arrivée:</p> <i class="italic-text">{{ vol.dateArrivee|date('l, d, Y') }}</i>
                                </div>
                                <div class="col-sm-4">
                                    <!-- Price -->
                                    <p class="card-text text-muted bold-text" style="margin-top: 38px;">Prix: </p>
                                     <i class="italic-text">{{ vol.tarif }}</i><br>
                                    <!-- Flight Class -->
                                    <p class="card-text text-muted bold-text">Classe: </p></i><i class="italic-text">{{ vol.classe }}</i></p>
                                    <!-- More Details Button -->
                                    <div style="text-align: left;">
                <a class="btn" style="background-color: #30458B; border-color: #daeee5; color: #daeee5;" href="{{ path('add', {'id': vol.id}) }}">Commander</a>
</div>
                                    <a href="{{ path('app_vol_details_show', {'id': vol.id}) }}" class="btn btn-primary animate__animated animate__fadeIn more-details-btn">Plus détails</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning" role="alert">
                            No vols found.
                        </div>
                    {% endfor %}
                        {{ knp_pagination_render ( pagination ) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}
