{% extends 'backbase.html.twig' %}
{% block body %}
<title>Tournee index</title>



        <section class="breadcrumbs">
         <div class="container">
         <button onclick="history.back();" class="btn btn-dark">Retour</button>

    <h1>Tourn√©e </h1>
    <a href="{{ path('app_tournee_new') }}" class="btn btn-success btn-lg btn-block">Create new</a>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>DateDebut</th>
                <th>Duree</th>
                <th>Description</th>
                <th>Tarif</th>
                <th>Monuments</th>
                <th>TrancheAge</th>
                <th>MoyenTransport</th>
                
            </tr>
        </thead>
        <tbody>
        {% for tournee in tournees %}
            <tr>
                <td>{{ tournee.id }}</td>
                <td>{{ tournee.nom }}</td>
                <td>{{ tournee.dateDebut ? tournee.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ tournee.duree }}</td>
                <td>{{ tournee.description }}</td>
                <td>{{ tournee.tarif }}</td>
                <td>{{ tournee.monuments }}</td>
                <td>{{ tournee.trancheAge }}</td>
                <td>{{ tournee.moyenTransport }}</td>
                
                    <td><a href="{{ path('app_tournee_show', {'id': tournee.id}) }}" class="btn btn-sm btn-info">show</a></td>
                    <td><a href="{{ path('app_tournee_edit', {'id': tournee.id}) }}" class="btn btn-sm btn-warning">edit</a></td>
                    <td> {{ include('tournee/_delete_form.html.twig') }}</td>
                    
                
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


     </div>
    </section>
{% endblock %}
