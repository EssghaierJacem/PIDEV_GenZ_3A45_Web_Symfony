{% extends 'backbase.html.twig' %}
{% block body %}
<title>Tournee index</title>



        <section class="breadcrumbs">
         <div class="container">
        

    <h1>Tournée </h1>
    <a href="{{ path('app_tournee_new') }}" class="btn btn-success btn-lg btn-block">Create new</a>
    <a href="{{ path('app_tourneeB_search') }}" class="btn btn-primary">Recherche de tournées</a>
    
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date de debut</th>
                <th>Duree</th>
                {# <th>Description</th> #}
                <th>Tarif</th>
                <th>Monuments</th>
                <th>Tranche d'age</th>
                <th>Moyen de transport</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
        {% for tournee in pagination %}
            <tr>
                <td>{{ tournee.id }}</td>
                <td>{{ tournee.nom }}</td>
                <td>{{ tournee.dateDebut ? tournee.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ tournee.duree }}</td>
                {# <td>{{ tournee.description }}</td> #}
                <td>{{ tournee.tarif }}</td>
                <td>{{ tournee.monuments }}</td>
                <td>{{ tournee.trancheAge }}</td>
                <td>{{ tournee.moyenTransport }}</td>
                
                    <td><a href="{{ path('app_tournee_show', {'id': tournee.id}) }}" class="btn btn-sm btn-info">show</a></td>
                    <td><a href="{{ path('app_tournee_edit', {'id': tournee.id}) }}" class="btn btn-sm btn-warning">edit</a></td>
                    <td> {{ include('tournee/_delete_form.html.twig') }}</td>
                  
                
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    {% if pagination.currentPageNumber > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_tournee_index', {'page': 1}) }}">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_tournee_index', {'page': pagination.currentPageNumber - 1}) }}"
                               aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                    {% endif %}
                    {% for page in 1..pagination.pageCount %}
                        <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                            <a class="page-link" href="{{ path('app_tournee_index', {'page': page}) }}">{{ page }}</a>
                        </li>
                    {% endfor %}
                    {% if pagination.currentPageNumber < pagination.pageCount %}
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path('app_tournee_index', {'page': pagination.currentPageNumber + 1}) }}"
                               aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link"
                               href="{{ path('app_tournee_index', {'page': pagination.pageCount}) }}">Last</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
    
     
    
            


     </div>
     
    </section>
    
{% endblock %}

